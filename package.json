{
  "private": true,
  "name": "tc-project",
  "description": "Tc, the chat client for Twitch",
  "version": "0.0.0",
  "scripts": {
    "start": "gulp launch",
    "postinstall": "cd src && npm install",
    "dev-watch-files": "gulp dev-watch-files",
    "dev-launch-electron": "gulp dev-launch-electron",
    "build": "gulp build",
    "lint": "eslint src --fix",
    "don't touch pack & dist, just run build instead": "",
    "pack": "build",
    "dist": "build",
    "dist:linux": "build -l",
    "dist:mac": "build -m",
    "dist:windows": "build -w"
  },
  "build": {
    "appId": "zyx.gettc.tc",
    "asar": true,
    "npmRebuild": false,
    "copyright": "Copyright 2017 Andrea Stella. All rights reserved",
    "directories": {
      "app": "_build"
    },
    "dmg": {},
    "mac": {
      "identity": "Andrea Stella (42XGWVW434)"
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://github.com/mccxiv/tc/blob/master/build/icon.ico?raw=true"
    }
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-return-assign": "off",
      "no-var": "error",
      "max-len": "error"
    }
  },
  "eslintIgnore": ["src/node_modules"],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "css-loader": "^0.23.1",
    "electron": "^1.7.9",
    "electron-builder": "^19.46.6",
    "electron-builder-squirrel-windows": "^19.46.5",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^0.8.5",
    "gulp": "^3.9.1",
    "html-loader": "^0.4.5",
    "imports-loader": "^0.6.5",
    "json-loader": "^0.5.7",
    "ng-annotate-loader": "^0.1.1",
    "node-loader": "^0.5.0",
    "shelljs": "^0.6.1",
    "style-loader": "^0.13.2",
    "url-loader": "^0.5.9",
    "webpack": "^1.15.0"
  }
}
