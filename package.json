{
  "private": true,
  "name": "tc-project",
  "description": "Tc, the chat client for Twitch",
  "version": "0.0.0",
  "scripts": {
    "start": "gulp launch",
    "postinstall": "cd src && npm ci",
    "dev-watch-files": "gulp dev-watch-files",
    "dev-launch-electron": "gulp dev-launch-electron",
    "build": "gulp build",
    "lint": "eslint src",
    "don't touch pack & dist, just run build instead": "",
    "pack": "build",
    "dist": "build",
    "dist:linux": "build -l",
    "dist:mac": "build -m",
    "dist:windows": "build -w"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "build": {
    "appId": "zyx.gettc.tc",
    "asar": true,
    "npmRebuild": false,
    "copyright": "Copyright 2017 Andrea Stella. All rights reserved",
    "directories": {
      "app": "_build"
    },
    "dmg": {},
    "mac": {
      "identity": "Andrea Stella (42XGWVW434)"
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://github.com/mccxiv/tc/blob/master/build/icon.ico?raw=true"
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard",
    "rules": {
      "no-return-assign": "off",
      "no-var": "error",
      "max-len": "error"
    }
  },
  "eslintIgnore": [
    "src/node_modules"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.56",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.56",
    "@babel/plugin-proposal-decorators": "^7.0.0-rc.1",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.56",
    "@babel/preset-env": "^7.0.0-beta.56",
    "@babel/runtime": "^7.0.0-beta.56",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.0-beta.4",
    "css-loader": "^0.28.10",
    "electron": "^1.8.2",
    "electron-builder": "^21.2.0",
    "electron-builder-squirrel-windows": "^20.2.0",
    "eslint": "^4.18.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^1.1.9",
    "gulp": "^4.0.0",
    "html-loader": "^0.5.5",
    "husky": "^1.0.0-rc.13",
    "imports-loader": "^0.8.0",
    "json-loader": "^0.5.7",
    "ng-annotate-loader": "^0.6.1",
    "node-loader": "^0.6.0",
    "pug-html-loader": "^1.1.5",
    "shelljs": "^0.8.1",
    "style-loader": "^0.20.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "url-loader": "^0.6.2",
    "webpack": "^4.16.4",
    "webpack-cli": "^2.0.9"
  }
}
