side-toolbar .zmdi
  vertical-align: -3px

side-toolbar md-divider.vertical
  display: inline
  border-top-style: none
  border-right: 1px solid rgba(0, 0, 0, 0.12)

side-toolbar .md-button
  min-width: 0
  border-radius: 0 !important
  margin: 0
  line-height: 34px
  min-height: 34px

side-toolbar
  min-height: 34px

side-toolbar .connection
  cursor: default

side-toolbar .connection.not-ready
  color: #c6a600

side-toolbar .collapse-button
  margin-left: 10px

side-toolbar .collapse-button i
  transition: transform 350ms 300ms ease-out

side-toolbar .collapse-button.collapsed i
  transform: rotate(180deg)

side-toolbar .update
  color: #FF9A40

