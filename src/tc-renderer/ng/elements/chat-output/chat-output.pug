.chat-lines(
  ng-class='{"variable-line-height": settings.appearance.variableLineHeight}'
)
  .chat-line(
    ng-repeat='m in messages',
    ng-class='::messageClasses(m)',
    ng-style='::messageInlineStyles(m)'
  )
    span.timestamp.lighter(ng-if='::settings.chat.timestamps')
      | {{::m.at | date: 'H:mm'}}  
    span.badges(ng-if='::m.user')
      span.badge(
        ng-repeat='(name, version) in ::m.user.badges',
        data-title='{{::badgeTitle(name, version)}}',
        ng-style='::badgeBg(name, version)'
      )
      span.badge.ffz(data-title='FFZ Supporter', ng-if='::m.user["ffz_donor"]')
    span.username(
      ng-if='::m.user',
      ng-click='selectUsername(m.user.username)',
      ng-style='::{color: calculateColor(m.user.color)}'
    )
      | {{::m.user['display-name']}}
      span(ng-if='::displayNameIsDifferent(m)')
        | ({{::m.user['username']}})
    span.username(
      ng-if='::!m.user && m.type === "whisper"',
      ng-click='selectUsername(m.from)'
    ) {{::m.from}}
    i.zmdi.zmdi-chevron-right.whisper-arrow(ng-if='::m.type === "whisper"')
    span.username(
      ng-if='::m.type === "whisper"',
      ng-click='selectUsername(m.to)'
    ) {{::m.to}}
    span.separator(
      ng-if='::m.type === "chat" || m.type === "whisper" || m.type === "cheer"'
    ) : 
    span.separator(ng-if='::m.type === "action"')  
    span.message(ng-bind-html='::trusted(m.message)')
  .auto-scroll-notice(ng-if='!autoScroll()', ng-click='scrollDown()')
    | More messages below
