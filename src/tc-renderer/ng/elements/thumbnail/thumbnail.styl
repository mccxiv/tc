thumbnail
  color: #e1e1e1

  img
    display: block

  i
    outline: none

  .content
    position: relative
    min-height: 100px

  .hover-content
    width: 100%
    height: 100%
    position: absolute
    opacity: 0
    background-color: rgba(0, 0, 0, 0.25)
    transition: all 250ms ease-out

  .hover-content .play
    font-size: 35px
    margin: 10px

  thumbnail:hover .hover-content
    opacity: 1

  .viewers i
    vertical-align: -1px

  .hover-content i
    cursor: pointer

  .title
    font-size: 1.2rem
    white-space: nowrap
    width: 100%
    overflow: hidden
    text-overflow: ellipsis
    position: absolute
    padding: 3px 8px
    background-color: rgba(0, 0, 0, .4)

  .footer
    font-size: 1.1rem
    position: absolute
    bottom: 8px
    right: 8px
    padding: 3px
    background-color: rgba(0, 0, 0, .5)

  .viewers i
    color: red

  .preview
    width: 100%

  .hide-button
    position: absolute
    right: 0
    top: 0
    padding: 0 6px
    min-width: 0
    min-height: 0 !important
    margin: 0
    border-radius: 0
    line-height: 24px
    transition: opacity 250ms ease-out

  thumbnail:hover .hide-button
    opacity: 1

  .host-button
    outline: none
    margin-right: 2px
    cursor: pointer
    border: 1px solid transparent
    border-radius: 2px
    display: inline-block

  .host-button:hover
    border-color: rgba(255, 255, 255, 0.65)

  .followers
    margin-right: 2px

  .game
    display: inline-block
    overflow: hidden
    text-overflow: ellipsis
    max-width: 150px
    white-space: nowrap
    margin: 1px 1px 0 1px

  .footer i
    margin-right: 4px

  .footer span
    margin-right: 6px

