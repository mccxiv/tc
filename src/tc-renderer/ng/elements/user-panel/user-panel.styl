user-panel
  margin-top: -1px
  font-size: 1.2rem

  .zmdi
    vertical-align: -1px

  .zmdi.zmdi-comment-more
    vertical-align: -2px

  .profile-picture-div
    width: 53px
    height: 53px
    overflow: hidden
    background-size: cover
    background-image: url(../../../../assets/default-user-image.png)

  .profile-picture
    width: 100%
    display: block

  .close-button
    margin-right: 4px

  .toolbar md-divider.vertical
    display: inline
    border-top-style: none
    border-right: 1px solid rgba(0, 0, 0, 0.12)

  .md-button
    margin: 0
    height: 21px
    min-width: 0
    min-height: 0
    padding: 0 2px
    line-height: normal
    border-radius: 0 !important

  .toolbar
    margin-left: 4px
    margin-right: 4px

  .row
    height: 16px
    margin-left: 6px
    margin-right: 3px
    line-height: 16px

  .username
    margin-top: 3px
    max-width: 113px
    overflow: hidden
    text-overflow: ellipsis

  .creation-date
    font-size: 1.1rem

  .md-button:not([disabled]):hover
    background-color: inherit

  .disabled
    opacity: 0.2

